#MPSVac Rearming and Reintegration 
#From EPICS to MPSVac
#After 2 seconds the Reaming and Reintegration actions reset automatically (button behaviour)
record(bo, "MPSoS-MPSVac:Ctrl-IOC-001:MPSVac-CmdReint")
{
    field(DTYP, "OPCUA")
    field(OUT,  "@$(SUBS) ns=3;s=\"dbRearm_Reint_States\".\"EPICS_MPSVac:Reint_Req\"")    
    field(ONAM, "Reintegrating MPSVac")
    field(HIGH, "2")
    field(DESC, "Reintegration button of MPSVac")
}
record(bo, "MPSoS-MPSVac:Ctrl-IOC-001:MPSVac-CmdRearm")
{
    field(DTYP, "OPCUA")
    field(OUT,  "@$(SUBS) ns=3;s=\"dbRearm_Reint_States\".\"EPICS_MPSVac:Rearm_Req\"")    
    field(ONAM, "Rearming MPSVac")
    field(HIGH, "2")
    field(DESC, "Rearming button of MPSVac")
}

